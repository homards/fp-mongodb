{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compileOnSave": true
}
